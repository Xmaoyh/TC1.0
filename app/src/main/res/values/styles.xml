<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--我的信息字体样式 -->
    <style name="myinfo_text_style">
        <item name="android:textColor"> @color/black_popwintext</item>
        <item name="android:textSize"> @dimen/popwindowtext_15sp</item>
    </style>
    <!--popupwindow 动画 -->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow</item>
        <item name="android:windowExitAnimation">@anim/pophide</item>
    </style>

</resources>
