<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#003D79"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/car_add_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="#982828" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="新增车辆" />

        <TextView
            android:id="@+id/staff_add_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存" />
    </LinearLayout>


    <EditText
        android:id="@+id/staff_add_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="车牌号" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#6F00D2" />

    <EditText
        android:id="@+id/staff_add_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="长*宽*高(米)" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="运输类型"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#6F00D2" />

    <EditText
        android:id="@+id/car_add_volume"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="可装载体积（方）"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/car_add_kg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="载重（吨）"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="车辆类型"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#6F00D2" />

    <EditText
        android:id="@+id/car_add_drive"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="司机" />


</LinearLayout>