<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:divider="@drawable/linear_layout_divider"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingTop="10dp"
              android:showDividers="beginning|middle|end"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/tv_car_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浙 AJW529"
            android:textColor="@color/black_popwintext"
            android:textSize="@dimen/send_car_list_main_text"
            />

        <TextView
            android:id="@+id/tv_car_under_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="张司机"
            android:textColor="@color/black_popwintext"
            android:textSize="@dimen/send_car_list_main_text"
            />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/driver_online"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_leaving_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/departure_time"
                android:textColor="@color/black_popwintext"
                android:textSize="@dimen/send_car_list_detail_text"
                />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="2016-2-10"
                android:textSize="@dimen/send_car_list_detail_text"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="14:23:45"
                android:textSize="@dimen/send_car_list_detail_text"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_volume"
                android:textColor="@color/black_popwintext"
                android:textSize="@dimen/send_car_list_detail_text"
                />

            <ProgressBar
                android:id="@+id/pb_volume"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:paddingLeft="20dp"
                android:progress="50"
                android:progressDrawable="@drawable/progressbar_horizontal"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_weight"
                android:textColor="@color/black_popwintext"
                android:textSize="@dimen/send_car_list_detail_text"
                />

            <ProgressBar
                android:id="@+id/pb_weight"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:paddingLeft="20dp"
                android:progress="50"
                android:progressDrawable="@drawable/progressbar_horizontal_2"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/edit_receiving_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/receiving_fee"
            android:textSize="@dimen/send_car_list_main_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/yuan"
            android:textColor="@color/black_popwintext"
            android:textSize="@dimen/send_car_list_main_text"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/edit_delivery_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/delivery_fee"
            android:textSize="@dimen/send_car_list_main_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/yuan"
            android:textColor="@color/black_popwintext"
            android:textSize="@dimen/send_car_list_main_text"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:divider="@drawable/linear_layout_divider"
        android:orientation="horizontal"
        android:showDividers="middle"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/send_car_yes"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/send_car"
                android:textColor="@color/sendCarListBlue"
                android:textSize="@dimen/send_car_list_main_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/map_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/map"
                android:textColor="@color/sendCarListBlue"
                android:textSize="@dimen/send_car_list_main_text"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>