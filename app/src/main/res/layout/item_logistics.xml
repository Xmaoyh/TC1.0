<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:divider="@drawable/linear_layout_divider"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center_vertical">

        <TextView
            style="@style/myinfo_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_no"
            />

        <TextView
            android:id="@+id/tv_order_no"
            style="@style/myinfo_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="RSHZSG01280003"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <!--左边 -->
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--发货方 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/myinfo_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sending_unit"
                    />

                <TextView
                    android:id="@+id/tv_sending_unit"
                    style="@style/myinfo_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杭州算子科技有限公司"
                    />
            </LinearLayout>
            <!--收货方 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/myinfo_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/receiving_unit"
                    />

                <TextView
                    android:id="@+id/tv_receiving_unit"
                    style="@style/myinfo_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京西门子科技有限公司"
                    />
            </LinearLayout>
            <!--货物 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/myinfo_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goods"
                    android:textColor="@color/orderGray"
                    />

                <TextView
                    android:id="@+id/tv_goods_name"
                    style="@style/myinfo_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="防盗门 X2 等"
                    android:textColor="@color/orderGray"
                    />
            </LinearLayout>
            <!--日期 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/myinfo_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="@color/orderGray"
                    />

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/myinfo_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-02-12"
                    android:textColor="@color/orderGray"
                    />
            </LinearLayout>


        </LinearLayout>
        <!--右边 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_station"
                style="@style/myinfo_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="到达的站"
                android:textColor="@color/orderGray"
                />

            <TextView
                android:id="@+id/tv_time"
                style="@style/myinfo_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="10-24 12:33"
                android:textColor="@color/orderGray"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/map_icon"
                />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>