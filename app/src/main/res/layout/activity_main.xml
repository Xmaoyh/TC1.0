<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:tl="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/fl_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/fl_change"
        android:layout_alignParentBottom="true"
        android:background="@color/basic_background_color"
        tl:tl_iconHeight="23dp"
        tl:tl_iconWidth="23dp"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="#ffffff"
        tl:tl_textUnselectColor="#ffffff"
        tl:tl_textsize="12sp">
    </com.flyco.tablayout.CommonTabLayout>

</RelativeLayout>
