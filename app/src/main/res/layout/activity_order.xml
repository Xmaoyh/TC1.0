<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16.5dp"
        android:background="#3366cc"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/back" />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rad_disscuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_btn"
                android:button="@null"
                android:checked="true"
                android:text="@string/order_disscuss"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rad_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_btn"
                android:button="@null"
                android:text="@string/ordering_storagedetail"
                android:textSize="20sp" />

        </RadioGroup>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/order_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
